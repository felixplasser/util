#!/bin/bash

echo "$0 <find options>"
echo "Remove files"
echo "  e.g. rmi -size +10M"
echo

[[ $# -eq 0 ]] && exit 1

FILES=`find . "$@"` || exit 1

echo "*** List of files:"
echo
for F in $FILES
do
	echo $F
done
echo

echo "Delete these files? (y/n)"
read DELCHK

if [ "$DELCHK" == "y" ]
then
   echo 'Deleting ...'
   rm -v $FILES
else
   echo 'Stopping.'
fi
